language: php

addons:
    apt:
        packages:
        - apache2
        - postfix
        - libapache2-mod-fastcgi
        - libappindicator1
        - fonts-liberation

cache:
  directories:
    - $HOME/.composer/cache

sudo: required
dist: trusty

php:
    - "5.6"
    - "7.1"
    - "7.2"

env:
    global:
        - SYMFONY_DEPRECATIONS_HELPER=disabled
        - SYMFONY_PHPUNIT_VERSION=5.7
        - MODULE_DIR=/tmp/gamification
        - MODULE_SCRIPTS_DIR=/tmp/gamification/tools

    matrix:
        - PS_VERSION=1.7.4.x
        - PS_VERSION=1.7.5.x
        
    allow_failures:
        - php: 7.2       

    fast_finish: true        

before_script:
    - ./scripts/move_module $TRAVIS_BUILD_DIR $MODULE_SCRIPTS_DIR
    - $MODULE_SCRIPTS_DIR/clone $TRAVIS_BUILD_DIR $PS_VERSION
    - $MODULE_SCRIPTS_DIR/install $TRAVIS_BUILD_DIR
    - $MODULE_SCRIPTS_DIR/install_webserver
    - $MODULE_SCRIPTS_DIR/start $TRAVIS_BUILD_DIR
    - $MODULE_SCRIPTS_DIR/install_module $MODULE_SCRIPTS_DIR $TRAVIS_BUILD_DIR gamification
    
script: 
    - cd $TRAVIS_BUILD_DIR/modules/gamification
    - composer cs-fix-test
    - composer test
        
notifications:
  email:         
    on_success: never
    on_failure: always